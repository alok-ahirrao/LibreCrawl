# =============================================================================
# GMB Core Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# Google OAuth 2.0 Credentials (from Google Cloud Console)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_GMB_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_GMB_CLIENT_SECRET=your-client-secret

# OAuth Redirect URI (must match Google Cloud Console settings)
GOOGLE_GMB_REDIRECT_URI=http://localhost:3000/api/gmb/callback

# =============================================================================
# Rate Limiting
# =============================================================================
# API rate limit (requests per second)
GMB_API_RATE_LIMIT=1.0

# Crawler rate limit (requests per second) - keep low to avoid detection
GMB_CRAWLER_RATE_LIMIT=0.2

# =============================================================================
# Proxy Configuration (for geo-targeted crawling)
# =============================================================================
# Enable/disable proxy usage
GMB_PROXY_ENABLED=false

# Proxy URL (format: http://user:pass@host:port)
GMB_PROXY_URL=

# Enable proxy rotation
GMB_PROXY_ROTATION=false

# =============================================================================
# Crawler Settings
# =============================================================================
# Run browser in headless mode
GMB_CRAWLER_HEADLESS=true

# Crawler timeout in milliseconds
GMB_CRAWLER_TIMEOUT=30000

# Max retries for failed crawls
GMB_CRAWLER_MAX_RETRIES=3

# =============================================================================
# Cache Settings (TTL in seconds)
# =============================================================================
# API response cache TTL (15 minutes)
GMB_CACHE_TTL_API=900

# SERP result cache TTL (1 hour)
GMB_CACHE_TTL_SERP=3600
